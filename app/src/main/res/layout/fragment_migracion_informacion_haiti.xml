<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/topbar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#5F4D3E"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/eljuego"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="27dp"
                        android:text="El juego"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/separator2"
                        app:layout_constraintStart_toEndOf="@+id/separator1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/inicio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:layout_marginEnd="36dp"
                        android:text="Inicio"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/separator1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/separator1"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="38dp"
                        android:background="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/eljuego"
                        app:layout_constraintStart_toEndOf="@+id/inicio"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.533" />

                    <TextView
                        android:id="@+id/migracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:text="MigraciÃ³n haitiana"
                        android:textColor="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/separator2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/separator2"
                        android:layout_width="1dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="18dp"
                        android:background="#FFFFFF"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/migracion"
                        app:layout_constraintStart_toEndOf="@+id/eljuego"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RelativeLayout
                        android:id="@+id/rv_inicio"
                        android:layout_width="109dp"
                        android:layout_height="69dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rv_eljuego"
                        android:layout_width="109dp"
                        android:layout_height="69dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="6dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/separator1"
                        app:layout_constraintTop_toTopOf="parent">

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rv_migracion"
                        android:layout_width="147dp"
                        android:layout_height="61dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="7dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="match_parent"
                    android:layout_height="4600dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/migracion_haiti"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topbar" />

                <RelativeLayout
                    android:id="@+id/scrollToGeografia"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="300dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/scrollToHistoria"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="300dp"
                    app:layout_constraintStart_toEndOf="@+id/scrollToGeografia"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/scrollToCultura"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="485dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/positionGeografia"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="950dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/positionHistoria"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="1940dp"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/positionCultura"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="3500dp"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>